{
  "name": "stars-todo-list",
  "displayName": "Star's Todo List",
  "description": "Create a todo list in VSCode",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/jaredgoddard/Stars-Todo-List.git"
  },
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:task-list-container"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "stars-todo-list.helloWorld",
        "title": "Hello"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "task-list-container",
          "title": "Simple Todo List",
          "icon": "resources/todo-list.png"
        }
      ]
    },
    "views": {
      "task-list-container": [
        {
          "type": "webview",
          "id": "stars-todo-list.task-list-view",
          "name": "Task List"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js && node build.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint && node build.js",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/react": "^18.3.10",
    "@types/react-dom": "^18.3.0",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.23.1",
    "esbuild-css-modules-plugin": "^3.1.2",
    "esbuild-plugin-svgr": "^3.0.0",
    "eslint": "^9.9.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@fortawesome/free-solid-svg-icons": "^6.6.0",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "jotai": "^2.10.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typestyle": "^2.4.0"
  }
}
